            <class name="testsPOM.logIn.LogInTestCorrectCredentials" />
            <class name="testsPOM.logIn.LogInTestWrongCredentials" />
        </classes>
    </test>

    <test name="MyProfileSuit">
        <classes>
            <class name="testsPOM.myProfile.MyProfilePageGoToHomePage"/>
            <class name="testsPOM.myProfile.MyProfilePageTestLogOut"/>
        </classes>
    </test>

    <test name="SelectItemsSuit">
        <classes>
            <class name="testsPOM.selectItemAfterLogIn.Select2ItemsFromHomePageAfterLogInWithParam"/>
            <class name="testsPOM.selectItemAfterLogIn.SelectItemFromHomePageAfterLogIn"/>
        </classes>
    </test>

    <test name="AddToCartSuit">
        <classes>
            <class name="testsPOM.addToCart.AddToCartItemFromHomePageAfterLogIn"/>
            <class name="testsPOM.addToCart.AddToCart3ItemsFromHomePageAfterLogInItemCsv"/>
            <class name="testsPOM.addToCart.AddToCart3ItemsFromHomePageAfterLogInItemFinalXpathProducts"/>
            <class name="testsPOM.addToCart.AddToCartItemFromHomePageAfterLogIn"/>
        </classes>
