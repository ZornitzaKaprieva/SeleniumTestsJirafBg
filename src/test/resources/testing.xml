<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite thread-count="3" verbose="1" name="SeleniumTestsJirafBg"
       annotations="JDK" parallel="tests">

    <test name="HomePageSuit" >
        <classes>
            <class name="testsPOM.homePage.GoToLogInFromHomePage" />
            <class name="testsPOM.homePage.SelectCategoriesFromHomePage" />
        </classes>
    </test>

    <test name="LoginSuit" >
