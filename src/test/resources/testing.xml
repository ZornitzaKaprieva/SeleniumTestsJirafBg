<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite thread-count="3" verbose="1" name="SeleniumTestsJirafBg"
       annotations="JDK" parallel="tests">

    <test name="HomePageSuit" >
        <classes>
            <class name="testsPOM.homePage.GoToLogInFromHomePage" />
            <class name="testsPOM.homePage.SelectCategoriesFromHomePage" />
        </classes>
    </test>

    <test name="LoginSuit" >
        <classes>
            <class name="testsPOM.logIn.LogInTestCorrectCredentials" />
            <class name="testsPOM.logIn.LogInTestWrongCredentials" />
        </classes>
    </test>

    <test name="MyProfileSuit">
        <classes>
            <class name="testsPOM.myProfile.MyProfilePageGoToHomePage"/>
            <class name="testsPOM.myProfile.MyProfilePageTestLogOut"/>
        </classes>
    </test>

    <test name="SelectItemsSuit">
        <classes>
            <class name="testsPOM.selectItemAfterLogIn.SelectItemFromHomePageAfterLogIn"/>
        </classes>
    </test>

    <test name="AddToCartSuit">
        <classes>
            <class name="testsPOM.addToCart.AddToCartItemFromHomePageAfterLogIn"/>
            <class name="testsPOM.addToCart.AddToCart3ItemsFromHomePageAfterLogIn"/>
            <class name="testsPOM.addToCart.AddToCart3ItemsFromHomePageAfterLogInItemFinalXpathProducts"/>
        </classes>
    </test>

    <test name="CheckoutSuit">
        <classes>
            <class name="testsPOM.checkout.GoToCheckOutWith1ItemFromSpecificCategoryAfterLogin"/>
            <class name="testsPOM.checkout.GoToCheckOutWithDifferentItemFromDifferentCategoriesAfterLogin"/>
            <class name="testsPOM.checkout.GoToCheckOutWithOneProductFromEachCategoryWithoutApprovalWindowWithAssertions"/>
            <class name="testsPOM.checkout.CheckOutWith6ProductsWithoutApprovalWindowAndCompletedOrderDetails"/>
            <class name="testsPOM.checkout.CheckOutWith6ProductsWithoutApprovalWindowAndCompletedOrderDetailsWithParam"/>
            <class name="testsPOM.checkout.GoToCheckOutWithOneProductFromEachCategoryAndItemParam"/>
            <class name="testsPOM.checkout.GoToCheckOutWithOneProductFromEachCategoryWithoutApprovalWindowFinalAssertion"/>
            <class name="testsPOM.checkout.TestFromLoginToCartPage1ItemCsv"/>
        </classes>
    </test>

    <test name="CategoriesSuit">
        <classes>
            <class name="testsPOM.categories.SelectCategoryWithoutLogIn"/>
        </classes>
    </test>

</suite>
