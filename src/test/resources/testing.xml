    <test name="GoToCheckoutSuit">
        <classes>
            <class name="testsPOM.goToCheckout.GoToCheckOutWith1ItemFromSpecificCategoryAfterLogin"/>
            <class name="testsPOM.goToCheckout.GoToCheckOutWithDifferentItemFromDifferentCategoriesAfterLogin"/>
            <class name="testsPOM.goToCheckout.GoToCheckOutWithOneProductFromEachCategoryAndItemParam"/>
            <class name="testsPOM.goToCheckout.GoToCheckOutWithOneProductFromEachCategoryAndItemParamFromCsv"/>
            <class name="testsPOM.goToCheckout.GoToCheckOutWithOneProductFromEachCategoryWithoutApprovalWindowFinalAssertion"/>
            <class name="testsPOM.goToCheckout.GoToCheckOutWithOneProductFromEachCategoryWithoutApprovalWindowWithAssertions"/>
            <class name="testsPOM.goToCheckout.TestFromLoginToCartPage1ItemCsv"/>
        </classes>
    </test>

    <test name="CheckOutSuit">
        <classes>
            <class name="testsPOM.checkout.CheckOutWith6ProductsWithoutApprovalWindowAndCompletedOrderDetails"/>
            <class name="testsPOM.checkout.CheckOutWith6ProductsWithoutApprovalWindowAndCompletedOrderDetailsWithItemParamFromCsv"/>
            <class name="testsPOM.checkout.CheckOutWith6ProductsWithoutApprovalWindowAndCompletedOrderDetailsWithParam"/>

        </classes>
    </test>

    <test name="CategoriesSuit">
        <classes>
            <class name="testsPOM.categories.SelectCategoryWithoutLogIn"/>
        </classes>
    </test>

</suite>
